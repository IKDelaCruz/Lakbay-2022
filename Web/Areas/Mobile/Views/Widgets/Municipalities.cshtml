@model Web.ViewModel.PlaceHomeViewModel
@using Project.Models.Models;
@using Web.Utilities;

@{
    ViewBag.Title = "Attraction";
    Layout = "";
}

<section class="add_bottom_30">
    <div class="main_title_2">
        <h2>
            Incredible destinations
        </h2>
        <p>Oriental Mindoro, is home to pristine islands, incredible beaches and untouched nature..</p>
    </div>

    <div class="row">
        @if (Model.Places != null)
        {
            <div id="explore_municipalities" class="owl-carousel owl-theme">
                @foreach (PlaceDto t in Model.Places)
                {
                    <div class="item">
                        <div class="box_grid">
                            <figure>
                                @*<a href="#0" class="wish_bt"></a>*@
                                <a href="/Places/Municipality/@t.Id">
                                    <img src="@(Model.CDNHOST + (t.HomeThumbnail.Replace(".jpg", "_thumb.jpg")))" class="img-fluid" alt="" loading="lazy">
                                    <div class="read_more"><span>Read more</span></div>
                                </a>
                                <small>@t.HomeSlug</small>
                            </figure>
                            <div class="wrapper">
                                <h3><a href="/Places/Municipality/@t.Id">@t.Title</a></h3>
                                <p>@t.Description.TruncateLongString(100)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <a href="/mobile/places/attractions/"><strong>View all<i class="arrow_carrot-right"></i></strong></a>

</section>