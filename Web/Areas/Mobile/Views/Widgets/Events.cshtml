
@model Web.ViewModel.PlaceHomeViewModel
@using Project.Models;
@using Project.Models.Models;
@using Web.Utilities;
@{
    ViewBag.Title = "Festivals";
    Layout = "";
}

<div class="add_bottom_30">
    <div class="main_title_2 mb-0">
        <span><em></em></span>
        <h3>Festivals</h3>
        <p>See the latest happenings around the province.</p>
    </div>
    <div class="row ">

        @if (Model.Places != null)
        {
            <div class="owl-carousel owl-theme">
                @foreach (PlaceDto t in Model.Places)
                {
                    <div class="item" style="width: 100%; background-color: white;">
                        <a class="box_news" href="javascript:;" onclick="EventNavigate('goto/eventdetails/@t.Id')" style="width: 100%; padding-left: 0;">
                            <figure style="position: relative; width: auto;">
                                <img src="@(Model.CDNHOST + (t.HomeThumbnail.Replace(".jpg", "_thumb.jpg")))" loading="lazy" alt="">
                                <figcaption><strong>@t.PublishedDate.ToString("dd")</strong>@t.PublishedDate.ToString("MMM")</figcaption>
                            </figure>
                            <ul style="padding: 0 10px;">
                                <li>@t.PublishedBy</li>
                                <li>@t.PublishedDate.ToString("MMMM dd, yyyy")</li>
                            </ul>
                            <h4 style="margin-bottom: 5px; padding: 0 10px;">@t.Title</h4>
                            <p class="text-justify" style="padding: 0 10px;">@(t.Description.Length > 300 ? t.Description.Substring(0, 300) : t.Description)...</p>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
    <p class="btn_home_align">
        <a href="javascript:;" class="btn_1 rounded"><strong>View all<i class="arrow_carrot-right"></i></strong></a>
    </p>
    @*<a href="javascript:;"><strong>View all<i class="arrow_carrot-right"></i></strong></a>
    <p class="btn_home_align"><a href="/Festival" class="btn_1 rounded">View all</a></p>*@
</div>

<script>
    function EventNavigate(url) {
        if (url !== undefined && url !== "") {
            invokeCSCode('type:isURL|value:' + url + '|function:');
        }
    }
</script>
