<div class="bg_color_1">

    <!-- /container -->
    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-12 ">
                <div class=" videoplayer min-height-650">
                    <h1 class="font-weight-bold text-success">TurismoTV</h1>
                    <p>#LakbayOrientalMindoro #TurismoTV</p>
                    <div>
                        <div class="col-lg-10 offset-lg-1  min-turismotv  mb-2">
                            <iframe loading="lazy" id="vid_frame" src="https://www.youtube.com/embed/6EYlexCIzYo?rel=0&showinfo=0&autohide=1&autoplay=1&rel=0" frameborder="0" allow="autoplay"></iframe>
                        </div>


                        <div class="row">
                            <div id="reccomended" class="owl-carousel owl-theme">
                                @if (Model.Images != null)
                                {
                                    foreach (PlaceImagesDto t in Model.Images)
                                    {
                                        var src = t.YoutubeThumbnail;
                                        if (!string.IsNullOrEmpty(t.Filename))
                                        {
                                            src = Model.CDNHOST+t.Filename.Replace(".jpg", "_thumb.jpg");
                                        }
                                        <div class="item">
                                            <a class="grid_item turismotv_grid">
                                                <figure style="background: url(@src)">
                                                    <div class="score" style="cursor:pointer;" onClick="document.getElementById('vid_frame').src='https://youtube.com/embed/@(t.YouTubeId)?autoplay=1&rel=0&showinfo=0&autohide=1&autoplay=1&rel=0'">
                                                        <strong>PLAY</strong>
                                                    </div>

                                                    <div class="info">
                                                        <h3>@t.ImageText</h3>
                                                    </div>
                                                </figure>


                                            </a>
                                        </div>


                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .videoplayer iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

<script src="https://vjs.zencdn.net/7.11.4/video.min.js"></script>
