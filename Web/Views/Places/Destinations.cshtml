<div class="container mt-4">
    <div class="col-lg-12">
        <div class="row no-gutters custom-search-input-2 inner">
            <div class="col-lg-10">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="What are you looking for...">
                    <i class="icon_search"></i>
                </div>
            </div>

            <div class="col-lg-2">
                <input type="submit" class="btn_search" value="Search">
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /custom-search-input-2 -->

    <div class="isotope-wrapper">
        <div class="row">

            @if (Model.Places != null)
            {
                foreach (PlaceDto t in Model.Places)
                {
                    <div class="col-xl-6 col-lg-6 col-md-6 isotope-item popular">
                        <div class="box_grid travel_box_height">
                            <figure>
                                @*<a href="#0" class="wish_bt"></a>*@
                                <a href="/Places/Destination/@t.Id"><img src="@Model.CDNHOST@t.HomeThumbnail" class="img-fluid" alt=""><div class="read_more"><span>Read more</span></div></a>
                                <small>@t.ParentName</small>
                            </figure>
                            <div class="wrapper">
                                <h3><a href="/Places/Destination/@t.Id">@t.Title</a></h3>
                                <p>@t.Description.TruncateLongString(100)</p>
                                <span class="price"> <i class="icon_pin"></i> @t.CompleteAddress</span>
                            </div>
                            @*<ul>
                                    <li><i class="icon_compass"></i> @t.DistanceFromManila kms</li>
                                    <li><div class="score"><span>Superb<em>@t.TotalPlaces Places</em></span></div></li>
                                </ul>*@
                        </div>
                    </div>



                }
            }

            <!-- /box_grid -->
            <!-- /box_grid -->
        </div>
        <!-- /row -->
    </div>
    <!-- /isotope-wrapper -->

